<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoaiSachActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbarloaisach"/>



    <ListView
        android:id="@+id/listLoaiSach"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        tools:listitem="@layout/loaisach_one_item" />
    <RelativeLayout
        android:layout_width="416dp"
        android:layout_height="40dp"
        android:layout_below="@id/listLoaiSach"
        android:layout_marginTop="-40dp"
        android:background="#F57F20" >
        <Button
            android:id="@+id/btnAddLoaiSach"
            android:stateListAnimator="@null"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_add_circle_outline_black_24dp"/>
    </RelativeLayout>
</RelativeLayout>