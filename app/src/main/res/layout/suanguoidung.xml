<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỬA NGƯỜI DÙNG"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtEditUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên tài khoản"
            android:layout_alignParentRight="true"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtEditUserName"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/edtEditPassword"
                android:hint="Nhập mật khẩu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:scrollHorizontally="true"
                app:passwordToggleEnabled="true" />

        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
    <EditText
        android:id="@+id/edtEditSdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số điện thoại"
        />
    <EditText
        android:id="@+id/edtEditHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Nhập họ và tên"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <Button
            android:id="@+id/btnSua"
            android:text="Sửa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btnNhapLai"
            android:text="Nhập lại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>